<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"/>

        <ImageView
            android:scaleX="2"
            android:scaleY="2"
            android:tint="@color/colorHeart"
            android:id="@+id/bigHeart"
            android:alpha="1"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/heart_double"/>

        <TextView
            android:id="@+id/suka"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:text="ДА НЕ РАБОТАЕТ, БЛЯТЬ, У ТЕБЯ ИНЕТ. ПЕРЕСТАНЬ, СУКА, ТЫКАТЬ В КНОПКУ"/>

        <LinearLayout
            android:id="@+id/networkLayout"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please, Check Internet Connection"/>

            <Button
                android:id="@+id/retryButton"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retry"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/colorAccent2"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>