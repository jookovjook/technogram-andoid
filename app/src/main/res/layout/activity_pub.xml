<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#f0f0f0"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <LinearLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0"
                    android:background="#f0f0f0">

                    <com.jookovjook.chatapp.paralaxviewpager.ParallaxViewPager
                        android:id="@+id/viewpager"
                        xmlns:pv="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        pv:interpolator="@anim/decelerate_interpolator"
                        pv:mode="right_overlay"
                        pv:outset="62%"
                        pv:shadow_width="30dp"
                        android:transitionName="main_image_transition"/>

                    <LinearLayout
                        android:id="@+id/down_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="top"
                            android:layout_margin="8dp"
                            android:src="@drawable/profile_image_small"
                            app:border_color="@color/colorPrimary"
                            app:border_width="2dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="top">

                            <TextView
                                android:layout_marginTop="6dp"
                                android:id="@+id/title"
                                android:text="Title"
                                android:maxLines="1"
                                android:textColor="#202020"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/username"
                                android:maxLines="1"
                                android:textColor="#606060"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text = "usernmae"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:orientation="vertical">

                            <com.like.LikeButton
                                app:icon_type="star"
                                app:icon_size="24dp"
                                app:anim_scale_factor="1.66667"
                                android:id="@+id/like_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <!--
                            <ImageButton
                                android:id="@+id/star_button"
                                android:layout_width="40dp"
                                android:minWidth="40dp"
                                android:layout_height="40dp"
                                android:background="@null"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/vector_drawable_ic_star_black___px"
                                android:scaleType="centerCrop" />
                                -->

                            <TextView
                                android:id="@+id/stars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_gravity="center"
                                android:textColor="#202020"/>

                        </LinearLayout>

                        <ImageButton
                            android:layout_width="40dp"
                            android:minWidth="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/card_more_button"
                            android:background="@null"
                            android:layout_gravity="center_vertical|top"
                            android:src="@drawable/ic_bookmark_border"
                            android:scaleType="centerCrop"
                            android:layout_weight="0" />

                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/license"
                            android:layout_margin="8dp"
                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="license"
                            android:background="#404040"
                            android:textColor="#f0f0f0"
                            android:visibility="gone"/>

                        <TextView
                            android:id="@+id/stage"
                            android:layout_margin="8dp"
                            android:padding="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stage"
                            android:background="#404040"
                            android:textColor="#f0f0f0"
                            android:visibility="gone"/>

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/logo_github" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/description"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This is the description of concept of publication User  can type there some additional information about his publication"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="right"
                        android:id="@+id/datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A long time ago"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:padding="8dp"
                    android:layout_below="@+id/layout_content"
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"/>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:elevation="2dp"
            android:background="#ffffff">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="top"
                android:layout_margin="8dp"
                android:src="@drawable/profile_image_small"
                app:border_color="@color/colorPrimary"
                app:border_width="2dp"/>

            <EditText
                android:id="@+id/editText"
                android:maxLines="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type comment..."
                android:layout_weight="2"/>

            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"/>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>