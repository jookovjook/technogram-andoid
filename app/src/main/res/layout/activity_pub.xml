<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="#f0f0f0"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <LinearLayout
                    android:id="@+id/layout_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0"
                    android:background="#f0f0f0">

                    <com.jookovjook.chatapp.paralaxviewpager.ParallaxViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        pv:interpolator="@anim/decelerate_interpolator"
                        pv:mode="right_overlay"
                        pv:outset="62%"
                        pv:shadow_width="30dp" />

                    <LinearLayout
                        android:id="@+id/down_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="top"
                            android:layout_margin="8dp"
                            app:border_color="@color/colorPrimary"
                            app:border_width="2dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_gravity="top">

                            <TextView
                                android:layout_marginTop="6dp"
                                android:id="@+id/title"
                                android:maxLines="1"
                                android:textColor="#202020"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/username"
                                android:maxLines="1"
                                android:textColor="#606060"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <ImageButton
                            android:layout_width="40dp"
                            android:minWidth="40dp"
                            android:layout_height="40dp"
                            android:id="@+id/card_more_button"
                            android:background="@null"
                            android:layout_gravity="center_vertical|top"
                            android:src="@drawable/ic_bookmark_border"
                            android:scaleType="centerCrop"
                            android:layout_weight="0" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/description"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="right"
                        android:id="@+id/datetime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:padding="8dp"
                    android:layout_below="@+id/layout_content"
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"/>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0"
            android:elevation="2dp"
            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView1"
                    android:textColor="#000000"
                    android:textColorLink="@color/colorAccent2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:text="Register or Log in to leave a comment"/>

                <LinearLayout
                    android:id="@+id/comment_layout"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatar_"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="top"
                        android:layout_margin="8dp"

                        app:border_color="@color/colorPrimary"
                        app:border_width="2dp"/>

                    <EditText
                        android:id="@+id/editText"
                        android:maxLines="4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Type a comment..."
                        android:layout_weight="2"/>

                    <Button
                        android:id="@+id/send_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Done"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>